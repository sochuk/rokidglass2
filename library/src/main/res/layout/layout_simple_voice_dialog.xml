<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_simple_voice_width"
    android:layout_height="@dimen/dialog_simple_voice_height"
    android:background="@mipmap/ic_dialog_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/GlassDialog.Message.Title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_button_margin_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/glass_button_width"
            android:layout_height="@dimen/glass_button_height">

            <com.rokid.glass.ui.button.GlassButton
                android:id="@+id/confirm_btn"
                style="@style/GlassButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/confirm_text" />

            <LinearLayout
                android:id="@+id/voice_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
        </RelativeLayout>

        <com.rokid.glass.ui.button.GlassButton
            android:id="@+id/cancel_btn"
            style="@style/GlassButton"
            android:layout_width="@dimen/glass_button_width"
            android:layout_height="@dimen/glass_button_height"
            android:layout_marginLeft="@dimen/glass_button_margin"
            android:text="@string/cancel_text" />
        <ViewStub
            android:id="@+id/customer_btn"
            android:layout_width="@dimen/glass_button_width"
            android:layout_height="@dimen/glass_button_height"
            android:layout_marginLeft="@dimen/glass_button_margin"
            android:layout="@layout/item_dialog_button" />
    </LinearLayout>
</LinearLayout>