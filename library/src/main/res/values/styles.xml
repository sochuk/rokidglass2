<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GlassButton">
        <item name="android:textSize">@dimen/glass_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxEms">12</item>
        <item name="android:textColor">@color/glass_button_text_color</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GlassDialogStyle" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <!--<item name="windowActionBar">false</item>-->
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/GlassDialogWindowAnimation</item>
    </style>

    <style name="GlassDialogWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_window_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_window_out</item>
    </style>

    <style name="GlassDialog"></style>

    <style name="GlassDialog.Notification">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GlassDialog.Message">
        <item name="android:textColor">@color/glass_ui_white</item>
    </style>

    <style name="GlassDialog.Notification.Title" parent="GlassDialog.Notification">
        <item name="android:textColor">@color/glass_ui_white</item>
        <item name="android:textSize">@dimen/glass_dialog_title_text_size</item>
    </style>

    <style name="GlassDialog.Notification.Message" parent="GlassDialog.Notification">
        <item name="android:textColor">@color/notification_dialog_message_color</item>
        <item name="android:textSize">@dimen/glass_dialog_message_text_size</item>
    </style>

    <style name="GlassDialog.Message.Title">
        <item name="android:textColor">@color/glass_ui_white</item>
        <item name="android:textSize">@dimen/glass_dialog_voice_text_size</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="GlassDialog.Message.Title.Single" parent="GlassDialog.Message.Title">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GlassDialog.Message.Title.Multi" parent="GlassDialog.Message.Title">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GlassDialog.Message.Content">
        <item name="android:textColor">@color/glass_ui_white</item>
        <item name="android:textSize">@dimen/glass_dialog_voice_content_text_size</item>
        <item name="android:maxLines">2</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Text">
        <item name="android:textColor">@color/common_light_text_color</item>
    </style>
    <style name="Text.BiggerLight" parent="Text">
        <item name="android:textColor">@color/common_light_text_color</item>
        <item name="android:textSize">@dimen/glass_bigger_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.LargeLight">
        <item name="android:textColor">@color/common_light_text_color</item>
        <item name="android:textSize">@dimen/glass_large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.LargerLight" parent="Text">
        <item name="android:textColor">@color/common_light_text_color</item>
        <item name="android:textSize">@dimen/glass_larger_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.MediumLight">
        <item name="android:textColor">@color/common_light_text_color</item>
        <item name="android:textSize">@dimen/glass_medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Normal">
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textSize">@dimen/glass_text_size</item>
    </style>
    <style name="Text.NormalLight">
        <item name="android:textColor">@color/common_light_text_color</item>
        <item name="android:textSize">@dimen/glass_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Small">
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textSize">@dimen/glass_small_text_size</item>
    </style>
    <style name="Text.SmallDark">
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textSize">@dimen/glass_small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.SmallLight">
        <item name="android:textColor">@color/common_light_text_color</item>
        <item name="android:textSize">@dimen/glass_small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Thin">
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textSize">@dimen/glass_thin_text_size</item>
    </style>
    <style name="Text.ThinLight">
        <item name="android:textColor">@color/common_light_text_color</item>
        <item name="android:textSize">@dimen/glass_thin_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RokidGlass.Button" parent="@style/Text.NormalLight">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxEms">12</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>